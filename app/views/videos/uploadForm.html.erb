<div class="hero-unit">
        <%= form_tag( {:action => 'upload'}, :multipart => 'true') do  %>
        <%= label_tag 'Name', nil, :for => :name %>
        <%= text_field_tag :name %>
        <%= label_tag 'File Path', nil, :for => :datafile %>
        <%= file_field_tag :datafile %>

        <br/>
        <%= submit_tag "Submit" %>

    <% end %>
</div>
